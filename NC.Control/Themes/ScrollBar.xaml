        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ScrollBar}">
                    <Grid x:Name="Bg"
                          Width="10"
                          HorizontalAlignment="Right"
                          Background="#66000000"
                          SnapsToDevicePixels="true">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0" />
                            <RowDefinition  Height="*" />
                            <RowDefinition  Height="0" />
                        </Grid.RowDefinitions>
                        <Track x:Name="PART_Track"
                               IsDirectionReversed="true"
                               HorizontalAlignment="Stretch"
                               IsEnabled="{TemplateBinding IsMouseOver}"
                               Grid.Row="1">
                            <Track.IncreaseRepeatButton>
                                <RepeatButton Command="{x:Static ScrollBar.PageRightCommand}"
                                              Style="{StaticResource VerticalScrollBarPageButton}" />
                            </Track.IncreaseRepeatButton>
                            <Track.DecreaseRepeatButton>
                                <RepeatButton Command="{x:Static ScrollBar.PageLeftCommand}"
                                              Style="{StaticResource VerticalScrollBarPageButton}" />
                            </Track.DecreaseRepeatButton>
                            <Track.Thumb>
                                <Thumb Style="{StaticResource VerticalScrollBarThumb}" />
                            </Track.Thumb>
                        </Track>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <ControlTemplate x:Key="VerticalScrollBar"
                     TargetType="{x:Type ScrollBar}">
        <Grid x:Name="Bg"
              Width="10"
              HorizontalAlignment="Right"
              Background="#66000000"
              SnapsToDevicePixels="true">
            <Grid.RowDefinitions>
                <RowDefinition Height="12" />
                <RowDefinition  Height="*" />
                <RowDefinition  Height="12" />
            </Grid.RowDefinitions>
            <RepeatButton Command="{x:Static ScrollBar.LineDownCommand}"
                          IsEnabled="{TemplateBinding IsMouseOver}"
                          HorizontalAlignment="Center"
                          Style="{StaticResource VerticalScrollBarButton}" />
            <!--Themes:ScrollChrome.ScrollGlyph="LeftArrow"-->
            <Track x:Name="PART_Track"
                   IsDirectionReversed="true"
                   HorizontalAlignment="Stretch"
                   IsEnabled="{TemplateBinding IsMouseOver}"
                   Grid.Row="1">

                <Track.IncreaseRepeatButton>
                    <RepeatButton Command="{x:Static ScrollBar.PageRightCommand}"
                                  Style="{StaticResource VerticalScrollBarPageButton}" />
                </Track.IncreaseRepeatButton>
                <Track.DecreaseRepeatButton>
                    <RepeatButton Command="{x:Static ScrollBar.PageLeftCommand}"
                                  Style="{StaticResource VerticalScrollBarPageButton}" />
                </Track.DecreaseRepeatButton>


                <Track.Thumb>
                    <Thumb Style="{StaticResource VerticalScrollBarThumb}" />
                </Track.Thumb>
            </Track>
            <RepeatButton Command="{x:Static ScrollBar.LineUpCommand}"
                          IsEnabled="{TemplateBinding IsMouseOver}"
                          Grid.Row="2"
                          Style="{StaticResource VerticalScrollBarButton}">
                <RepeatButton.RenderTransform>
                    <RotateTransform Angle="180"
                                     CenterX="5"
                                     CenterY="5" />
                </RepeatButton.RenderTransform>
            </RepeatButton>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="HorizontalScrollBar"
                     TargetType="{x:Type ScrollBar}">
        <Grid x:Name="Bg"
              Height="10"
              VerticalAlignment="Bottom"
              Background="#66000000"
              SnapsToDevicePixels="true">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="12" />
                <ColumnDefinition  Width="*" />
                <ColumnDefinition  Width="12" />
            </Grid.ColumnDefinitions>
            <RepeatButton Command="{x:Static ScrollBar.LineRightCommand}"
                          IsEnabled="{TemplateBinding IsMouseOver}"
                          HorizontalAlignment="Center"
                          Style="{StaticResource HorizontalScrollBarButton}" />
            <Track x:Name="PART_Track"
                   IsDirectionReversed="true"
                   HorizontalAlignment="Stretch"
                   IsEnabled="{TemplateBinding IsMouseOver}"
                   Grid.Column="1">

                <Track.IncreaseRepeatButton>
                    <RepeatButton Command="{x:Static ScrollBar.PageRightCommand}"
                                  Style="{StaticResource HorizontalScrollBarPageButton}" />
                </Track.IncreaseRepeatButton>
                <Track.DecreaseRepeatButton>
                    <RepeatButton Command="{x:Static ScrollBar.PageLeftCommand}"
                                  Style="{StaticResource HorizontalScrollBarPageButton}" />
                </Track.DecreaseRepeatButton>
                <Track.Thumb>
                    <Thumb Style="{StaticResource HorizontalScrollBarThumb}" />
                </Track.Thumb>
            </Track>
            <RepeatButton Command="{x:Static ScrollBar.LineLeftCommand}"
                          IsEnabled="{TemplateBinding IsMouseOver}"
                          Grid.Column="2"
                          Style="{StaticResource HorizontalScrollBarButton}">
                <RepeatButton.RenderTransform>
                    <RotateTransform Angle="180"
                                     CenterX="5"
                                     CenterY="5" />
                </RepeatButton.RenderTransform>
            </RepeatButton>
        </Grid>
    </ControlTemplate>
    <!--不带两边控制按钮的滚动条结束-->
    <Style x:Key="{x:Type ScrollBar}"
           TargetType="{x:Type ScrollBar}">
        <Setter Property="SnapsToDevicePixels"
                Value="True" />
        <Setter Property="OverridesDefaultStyle"
                Value="true" />
        <Style.Triggers>
            <Trigger Property="Orientation"
                     Value="Horizontal">
                <Setter Property="Width"
                        Value="Auto" />
                <Setter Property="Height"
                        Value="10" />
                <Setter Property="Template"
                        Value="{StaticResource HorizontalScrollBar}" />
            </Trigger>
            <Trigger Property="Orientation"
                     Value="Vertical">
                <Setter Property="Width"
                        Value="10" />
                <Setter Property="Height"
                        Value="Auto" />
                <Setter Property="Template"
                        Value="{StaticResource VerticalScrollBar}" />
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>